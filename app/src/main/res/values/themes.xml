<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.Textbender" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="button_textarea" parent="@android:style/Widget.Button">
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColor">#FF000000</item>
    <item name="android:textSize">32sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:background">@drawable/button_textarea</item>
    <item name="android:focusable">true</item>
    <item name="android:clickable">true</item>
  </style>
</resources>
